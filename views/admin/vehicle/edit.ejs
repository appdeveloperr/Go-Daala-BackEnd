<%- include('../../_layouts/adminheader' ); %>

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Edit Vehicle</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- jquery validation -->
                        <div class="card ">
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form" id="quickForm" method="post" action="/admin/vehicle/update"
                                enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Type</label>

                                        <input type="text" class="form-control" id="exampleInputEmail1" name="type"
                                            placeholder="Enter Vehicle name" value="<%=data.vehicle_type%>">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Service Charges</label>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rs:</span>
                                          
                                        <input type="number" name="service_charges" placeholder="Enter Service Charges Price Vehicle" class="form-control"
                                            id="exampleInputEmail1" value="<%=data.service%>">
                                    </div>
                                </div>
    
                                    <div class="form-group">
                                        <label for="">Distance</label>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rs: /Km</span>
                                         
                                        <input type="number" name="distance" placeholder="Enter Distance Price Rs: /Km " class="form-control"
                                            id="exampleInputEmail1" value="<%=data.distance%>">
                                    </div>
                                </div>
    
                                    <div class="form-group">
                                        <label for="">Time</label>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Rs: /min</span>
                                        <input type="number" name="time" placeholder="Enter Time Rs: /min" class="form-control"
                                            id="exampleInputEmail1" value="<%=data.time%>">
                                    </div>
                                </div>
                                    <label for="exampleInputPassword1">Select another image</label>
                                    <div class="form-group">
                                        <input type="file" class="form-control" name="myFile" id="img">
                                        <img src="#" id="imagePreview" alt="">
                                        <%var image=data.image_path; var img_length=image.length; var img=image.slice(8,
                                            img_length);%>
                                            <img src="<%=img%>" id="imagePreview" alt="">
                                    </div>
                                    <input type="hidden" name="id" value="<%=data.id%>">
                                    <input type="hidden" name="Data" value="<%=data%>">
                                    <input type="hidden" name="old_file" value="<%=data.image_path%>">
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                            <script>


                                function readURL(input) {

                                    for (var i = 0; i < input.files.length; i++) {
                                        if (input.files && input.files[i]) {
                                            var reader = new FileReader();
                                            reader.onload = function (e) {
                                                $("#imagePreview").attr('src', e.target.result).width(150).height(150);
                                            }
                                            reader.readAsDataURL(input.files[i]);
                                        }
                                    }
                                }

                                $("#img").change(function () {
                                    readURL(this);
                                });
                            </script>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                    <div class="col-md-6">

                    </div>
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../../_layouts/adminfooter' ); %>