<%- include('.\\' + '../_layouts/adminheader'); %>
<h2 class="page-title">Add a News</h1>
<a href="/adminnews" class="btn btn-primary">Back to All News</a>
<br><br>
<form   action="/adminnews/uploads"  enctype="multipart/form-data" method="POST">

<% if(title!=null) { %>

<div class="form-group">
<label for="">Page Title</label>
	<select name="title" class="form-control">
 				<% title.forEach(function(pages){ %>
						<option value="<%= pages.title %>"><%= pages.title %></option>
				<% }); %>
	</select>
</div>
<% } %>




<div class="form-group">
<label for="">Files</label>
<input type="file" class="form-control" name="myFiles" id="img" multiple>
<img src="#" id="imagePreview"  alt="">
</div>


<% if(category!=null) { %>

<div class="form-group">
<label for="">Category</label>
	<select name="category" class="form-control">
 				<% category.forEach(function(cat){ %>
						<option value="<%= cat.title %>"><%= cat.title %></option>
				<% }); %>
	</select>
</div>
<% } %>

<div class="form-group">
<label for="">HeadLine</label>
<input type="text" class="form-control" name="headline" value="<%= headline %>" placeholder="headline" >
</div>

<div class="form-group">
<label for="">SubmittedBy</label>
<input type="text" class="form-control" name="submittedBy" value="<%= submittedBy %>" placeholder="submittedBy" >
</div>

<div class="form-group">
<label for="">Details</label>
<textarea name="details"  class="form-control" cols="10" rows="05"  placeholder="Details" ><%= details %></textarea>
</div>
<div class="form-group">
<input type="hidden" id="custId" name="date" value="<%= date %>">
</div>

<input type="submit" class="btn btn-dark">
</form>


<script>

	
	function readURL(input){
		
		for(var i = 0; i<input.files.length; i++){
		if(input.files && input.files[i]){
			var reader =  new FileReader();
			reader.onload = function(e){
				$("#imagePreview").attr('src',e.target.result).width(100).height(100);
			}
reader.readAsDataURL(input.files[i]);
}
	}
}

	$("#img").change(function(){
readURL(this);
});
</script>

<%- include('.\\' + '../_layouts/adminfooter'); %>
