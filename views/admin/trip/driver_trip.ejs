<%- include('.\\' + '../../_layouts/adminheader'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All Trip</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <!-- <div class="card-header">
                        <a href="/admin/vehicle/create" class="btn btn-primary">Create Vehicle</a>
                    </div> -->
                    <!-- /.card-header -->
                    <%if(driver_trip){ %>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Pick Up</th>
                                    <th>Drop Off</th>
                                    <th>Vehicle Name</th>
                                    <th>Estimated Distance</th>
                                    <th>Estimated Time</th>
                                    <th>Total Cost</th>
                                    <th>Vendor Id</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                                <tr> <%driver_trip.forEach(function(item){  %>
                                    <td><%=item.id%></td>
                                    <td><%=item.pickup%></td>
                                    <td><%=item.dropoff%> </td>
                                    <td><%=item.vehicle_name%> </td>
                                    <td><%=item.estimated_distance%></td>
                                    <td><%=item.estimated_time%></td>
                                    <td><%=item.total_cost%></td>
                                    <td><%=item.vendor_id%> </td>
                                </tr>
                                <%});%>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <%}%>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



<%- include('.\\' + '../../_layouts/adminfooter'); %>