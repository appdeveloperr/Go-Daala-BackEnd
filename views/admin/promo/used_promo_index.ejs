<%- include('.\\' + '../../_layouts/adminheader'); %>

<!-- Content Wrapper. Contains page content -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Used Promo Codes Vendor list</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <a href="/admin/promo/index" class="btn btn-primary">Back</a>
                    </div>
                    <!-- /.card-header -->
                    <%if(use_promo){ var a=1;%>
                    <div class="card-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Code</th>
                                    <th>Discount</th>
                                    <th>Vendor Name</th>
                                    <th>Vendor Email</th>
                                    <th>Vendor Phone no</th>
                                    <th>Reciveing Date</th>

                                </tr>
                            </thead>
                            <tbody>
                                <% use_promo.forEach(function(item){ function convert(str) {var date = new Date(str),mnth = ("0" + (date.getMonth() + 1)).slice(-2),day = ("0" + date.getDate()).slice(-2);return [date.getFullYear(), mnth, day].join("-");} %>
                                <tr>
                                    <%if(vendors_list){ %>
                                    <%vendors_list.forEach(function(vendor){ %>
                                    <%if(item.dataValues.vendor_id==vendor.dataValues.id){%>
                                     <td><%=a%><%a++%></td>
                                    <td><%=promo_data.dataValues.code%></td>
                                    <td><%=promo_data.dataValues.discount%></td>
                                    <td><%=vendor.first_name%> &nbsp;&nbsp;&nbsp;&nbsp;
                                        <%=vendor.last_name%></td>
                                    <td><%=vendor.email%></td>
                                    <td><%=vendor.phone_number%></td>
                                    <td><%=convert(item.createdAt)%></td>

                                    <%}%>
                                <%})}%>
                                </tr>
                                <%})%>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <%}%>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

