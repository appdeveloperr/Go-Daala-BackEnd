<%- include('.\\' + '../../_layouts/adminheader'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All Notifications List</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <a href="/admin/notification/create" class="btn btn-primary">Create Notification</a>
                    </div>
                    <!-- /.card-header -->
                    <%if(all_notification){ var a=1;%>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>title</th>
                                    <th>Body</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%all_notification.forEach(function(item){ %>
                                <tr>
                                    <% var img =item.createdAt;  var dateObj= new Date(img);

                                    
                                    var month = dateObj.getUTCMonth() + 1;
                                    var day = dateObj.getUTCDate();
                                    var year = dateObj.getUTCFullYear();
                                    
                                  var  newdate = day + "/" + month + "/" + year;%>
                                    <td><%=a%><%a++%></td>
                                    <td><%=item.title%></td>
                                    <td><%=item.body%></td>
                                    
                                    <td><%=newdate%></td>
                                    
                                </tr>
                                <%});%>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <%}%>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

