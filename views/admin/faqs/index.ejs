<%- include('../../_layouts/adminheader'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>All FAQ's List</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <a href="/admin/faqs/create" class="btn btn-primary">Add FAQ's</a>
                    </div>
                    <!-- /.card-header -->
                    <%if(all_faq_s){ var a=1;%>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>title</th>
                                    <th>Desc</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%all_faq_s.forEach(function(item){  %>
                                <tr>
                                    <td><%=a%><%a++%></td>
                                    <td><%=item.title%></td>
                                    <td><%=item.disc%></td>
                                    <td>
                                        <a href="/faqs/Edit/<%=item.id%>" class="mr-2">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a class="confirmDeletion" href="/admin/faqs/delete/<%=item.id%>">
                                            <i class="fa fa-trash text-danger"></i>
                                        </a>

                                    </td>
                                </tr>
                                <%});%>

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <%}%>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

<%- include('../../_layouts/adminfooter'); %>