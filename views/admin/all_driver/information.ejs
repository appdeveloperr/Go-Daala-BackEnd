                                    <td><img src="<%=img%>" alt=""></td>
                                    <td><img src="<%=img%>" alt=""></td>

                         
                                    <td>
                                        <a href="/driver/vehicles/status/<%=one_vehicle.id%>" class="mr-2">
                                            <button type="button" class="btn btn-block btn-info">Information</button>
                                    </a>
