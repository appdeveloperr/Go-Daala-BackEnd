<%- include('../../_layouts/adminheader' ); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Information</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <%if(all_trips){ %>
                    <div class="card-body">

                        <caption>
                            <h2> Trips Information</h2>
                        </caption>
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Pick up</th>
                                    <th>Drop off</th>
                                    <th>vehicle_name</th>
                                    <th>estimated_distance</th>
                                    <th>estimated_time</th>
                                    <th>total_cost</th>
                                    <th>status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%all_trips.forEach(function(item){%>
                                <tr>


                                    <td>
                                        <%=item.pickup%>
                                    </td>
                                    <td>
                                        <%=item.dropoff%>
                                    </td>
                                    <td>
                                        <%=item.vehicle_name%>
                                    </td>
                                    <td>
                                        <%=item.estimated_distance%>
                                    </td>
                                    <td>
                                        <%=item.estimated_time%>
                                    </td>
                                    <td>
                                        <%=item.total_cost%>
                                    </td>
                                    <td>
                                        <%=item.status%>
                                    </td>


                                </tr>
                                <%});%>

                            </tbody>
                        </table>

                        <%}%>
                            </div>
                            <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <%- include('../../_layouts/adminfooter' ); %>