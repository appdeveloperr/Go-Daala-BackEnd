<!-- Content Wrapper. Contains page content -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Help and Support</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

  <!-- Main content -->
  <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
    
  
              <div class="card">
                <div class="card-header">
                  <!-- <h3 class="card-title">DataTable with default features</h3> -->
                </div>
                <!-- /.card-header -->
                <%if(all_contect){ var a=1;%>
                <div class="card-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Messages</th>
                            <th>Message Holder</th>
                            <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>

                    <%all_contect.forEach(function(item){%>
                                <%if(!item.admin_id){ console.log(item.driver_id)%>
                                <tr>
                                    <td><%=a%><%a++%></td>
                                    <td><%=item.fist_name%> <%=item.last_name%></td>
                                    <td><%=item.email%></td>
                                    <td><%=item.phone%></td>
                                    <td><%=item.message%> </td>
                                    <%if(item.message_holder=='outsider'){%>
                                    <td>Out Sider</td>
                                    <%}else if(item.driver_id!='null'){%>
                                    <td>Driver </td>
                                    <%} else if(item.vendor_id!='null'){%>
                                    <td>Vendor </td>
                                    <%}%>
                                    <td><a href="/contect_us/reply/<%=item.id%>" class="mr-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-reply" viewBox="0 0 16 16">
                                        <path
                                            d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z" />
                                    </svg>
                                    </a>

                                    </td>
                                </tr>
                                <%}})%>

                    </tbody>
                    <tfoot>
                    <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Messages</th>
                            <th>Message Holder</th>
                            <th>Action</th>
                    </tr>
                    </tfoot>
                  </table>
                </div>
                <%}%>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
</div>
<!-- /.content-wrapper -->


